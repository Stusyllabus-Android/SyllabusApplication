<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/fragment_toolbar_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/headImageDraweeView"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_headimage"
            android:padding="1dp"
            fresco:roundAsCircle="true"/>

        <LinearLayout
            android:layout_toRightOf="@id/headImageDraweeView"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pickNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称（限长）"
                android:textColor="#1F2229"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/accountTextView"
                android:text="账号：17sfyuan"
                android:textColor="#989DA7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/signature"
                android:layout_marginTop="5dp"
                android:text="很有个性的签名"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:text="个人主页"
            android:layout_toLeftOf="@+id/iconIn"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <ImageView
            android:id="@+id/iconIn"
            android:src="@drawable/icon_in"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <View
        android:background="#EBEDF0"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_margin="8dp"/>

    <RelativeLayout
        android:id="@+id/changeSemesterLayout"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/semesterIcon"
            android:src="@drawable/icon_semester"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="切换学期"
            android:textSize="18sp"
            android:textColor="#060911"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/semesterIcon"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/changeThemeLayout"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/themeIcon"
            android:src="@drawable/icon_theme"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="更换主题"
            android:textSize="18sp"
            android:textColor="#060911"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/themeIcon"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:background="#EBEDF0"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_margin="8dp"/>

    <RelativeLayout
        android:id="@+id/smartCardLayout"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/smartCardIcon"
            android:src="@drawable/icon_smartcard"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="一卡通"
            android:textSize="18sp"
            android:textColor="#060911"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/smartCardIcon"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/icon_in"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/arrangeLayout"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/arrangeIcon"
            android:src="@drawable/icon_examination"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="考试"
            android:textSize="18sp"
            android:textColor="#060911"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/arrangeIcon"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/icon_in"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/scoreLayout"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/scoreIcon"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:src="@drawable/icon_score"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="成绩"
            android:textSize="18sp"
            android:textColor="#060911"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/scoreIcon"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/icon_in"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:background="#EBEDF0"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_margin="8dp"/>

    <RelativeLayout
        android:id="@+id/settingLayout"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/settingIcon"
            android:src="@drawable/icon_setting"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="设置"
            android:textSize="18sp"
            android:textColor="#060911"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/settingIcon"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/icon_in"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>