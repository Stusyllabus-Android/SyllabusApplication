<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_rv_contact"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="#ffffff"
    >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/contract_headImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icon_contact"
            app:roundAsCircle="true"/>

        <TextView
            android:id="@+id/contract_nicknameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/contract_headImage"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="?attr/colorPrimary"
            android:textSize="14sp"
            tools:text="匿名"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/contract_contentTv"
            android:layout_below="@+id/contract_nicknameTV"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/contract_headImage"
            >

            <TextView
                android:id="@+id/contract_postTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:gravity="top"
                android:singleLine="true"
                android:textColor="@color/defaultShowColor"
                android:textSize="12sp"
                tools:text="2019-12-25 17:58:20"/>

            <TextView
                android:id="@+id/contract_postDeviceTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/contract_postTimeTv"
                android:ellipsize="end"
                android:gravity="top|right"
                android:singleLine="true"
                android:textColor="@color/defaultShowColor"
                android:textSize="10sp"
                tools:text="匿名"/>
        </RelativeLayout>

    <TextView
        android:id="@+id/contract_contentTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contract_headImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/material_textBlack_text"
        android:textSize="14sp"
        tools:text="Merry Christmas" />

    <View
            android:id="@+id/horDivLine"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/contract_contentTv"
            android:layout_marginTop="8dp"
            android:background="@color/defaultShowColor"/>

        <View
            android:layout_width="1px"
            android:layout_height="24dp"
            android:layout_below="@+id/horDivLine"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@color/defaultShowColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horDivLine">

            <LinearLayout
                android:id="@+id/thumbUpLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/contract_zanTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="赞[0]"
                    android:textColor="@color/defaultShowColor"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/commentLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/contract_commentTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="评论[0]"
                    android:textColor="@color/defaultShowColor"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
</RelativeLayout>